.topNav
  position relative
  text-align  center
  padding  20px 0
  height: 64px;
  background-color black
  letter-spacing 2px

.topNav .menu-item
  color: #fff;
  border-bottom: 4px solid rgba(242,170,74,0);
  transition: 0.3s;
  cursor: pointer;
  font-weight: 100;
  text-decoration: none;
  padding: 14px 15px;
  font-size: 16px;
  &:hover
    border-color: orange

.topNav img
  float left
  margin-left: 20px
  height: 25px;

.right-section
  float: right
  margin-right: 20px

.login-buttons
  display: inline-block
  a
    border-radius 0

.headerDropDown
  position: absolute;
  left: 52%;
  top: 67px;
  background-color: #333;
  padding-bottom: 14px;
  a
    display block

