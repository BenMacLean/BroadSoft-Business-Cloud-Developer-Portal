.login-container
  background  url(/assets/images/HubDeveloperPortalBG.jpg) no-repeat center center fixed
  height  100vh
  background-size  cover

.welcome-container
  width  560px
  margin  auto

a
  color  white
  font-family  roboto
  font-weight  100
  text-decoration  none
  padding  10px
  cursor pointer

.topNav
  text-align  center
  padding  20px 0
  background-color  rgba(255,255,255,0.3)

.topNav a
  color  #fff
  font-family  roboto
  font-weight  100
  text-decoration  none
  padding  18px
  font-size  20px
  text-shadow  2px 2px 3px #000

.topNav a hover
  color  #C5C5C5
  font-family  roboto
  font-weight  100
  text-decoration  none
  padding  18px
  font-size  20px
  text-shadow  2px 2px 3px #000

.my-div-title
  font-size  6vw
  color  white
  font-family  roboto
  width  100%
  text-align  center
  display  inline-block
  margin  auto
  padding-top  110px
  font-weight  100

.my-div-please-sign-in
  color  #fff
  font-size  26px
  font-family  roboto
  font-weight  100
  text-align  center

.form-item
  color  #fff
  font-size  30px
  text-align  center
  padding-bottom  10px
  padding-top  10px
  font-weight  100
  margin  auto

.form-label
  color  #fff
  font-size  20px
  font-weight  100
  font-family  roboto

.my-div-account
  color white
  font-size  23px
  font-weight  100
  padding  20px 0
  text-align  center

.form-value
  color  black

.buttons
  text-align  center
  margin  auto

.site-content
  width 70%
  height  100vh
  background-color white
  margin auto

.micro-app-iframe
  width  288px
  height  500px

.notifications-iframe
  width  288px
  height  40px

.contextual-iframe
  width  300px
  height  500px

.internal-header
  background-color #001c20

.form-value input
  width 40%
  margin auto

.btn
  margin  0 10px
.ng-touched
  border-color red
.ng-invalid
  border-color red
.ng-valid
  border-color green
  outline 0
.appContainer
  margin-bottom 10px
